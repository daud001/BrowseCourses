@model Course
@{
    ViewBag.Title = "Edit Course";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CourseID" />
    <div class="form-group">
        <label asp-for="CourseNumber"></label>
        <div><span asp-validation-for="CourseNumber" class="text-danger"></span></div>                
        <input asp-for="CourseNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>                
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Credits"></label>
        <div><span asp-validation-for="Credits" class="text-danger"></span></div>                
        <input asp-for="Credits" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"             
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"  />   
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Browse Courses</title>
</head>
<body>
    <div class="navbar navbar-inverse bg-inverse" role="navigation">   
        <div class="row">                
            <a class="col navbar-brand" href="#">Plan of Study</a>                   
        </div>   
        <div class="col-4 text-right">                
            @await Component.InvokeAsync("PlanSummary")                
        </div>  
    </div>             
    <div class="row m-1 p-1">             
        <div id="categories" class="col-3 btn-group-vertical">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-md-7 offset-md-1">
            @RenderBody()
        </div>
    </div>
</body>
</html>
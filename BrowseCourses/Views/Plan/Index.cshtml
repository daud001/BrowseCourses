@model PlanIndexViewModel

<h2>Your plan</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="text-align:center">Quantity</th>
            <th>Item</th>
            <th class="text-right"style="text-align:right">Credits</th>
            @* <th class="text-right">Total</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Plan.Lines) {
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Course.CourseNumber</td>
                <td class="text-right"style="text-align:right">@line.Course.Credits.ToString()</td>
               @* <td class="text-right">
                    @((line.Quantity * line.Course.Credits).ToString())
                </td> *@
                <td>              
                    <form asp-action="RemoveFromPlan" method="post">              
                        <input type="hidden" name="CourseID"              
                               value="@line.Course.CourseID" />              
                        <input type="hidden" name="returnUrl"              
                               value="@Model.ReturnUrl" />              
                        <button type="submit" class="btn btn-sm btn-danger">              
                            Remove              
                        </button>              
                    </form>              
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2" class="text-right" style="text-align:right">Total:</td>
            <td class="text-right"style="text-align:right">
                @Model.Plan.ComputeTotalValue().ToString()
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue planning</a>
    <a class="btn btn-primary" asp-action="Saveplan" asp-controller="PlanDetail">            
        Save Plan
    </a> 
</div>
@model Course

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <style>mark{
            border-radius:5px;
            background-color:dimgray;
            color:white;
}       </style>
        <h4>
            <strong>@Model.CourseNumber</strong>
                <h5 align="right"><mark>@Model.Credits </mark></h5>
                <h6>
                    <small>@Model.Description</small>
                </h6>
        </h4>
    </div>

    <form id="@Model.CourseID" asp-action="AddToPlan"              
            asp-controller="Plan" method="post">              
        <input type="hidden" asp-for="CourseID" />              
        <input type="hidden" name="returnUrl"              
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />              
        <span class="card-text p-1">              
           @*@ @Model.Description              *@
            <button type="submit"              
                class="btn btn-success btn-sm pull-right" style="float:right">              
                Add To Plan              
            </button>              
        </span>              
    </form>  
    
</div>




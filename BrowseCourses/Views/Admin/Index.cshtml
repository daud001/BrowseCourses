@model IEnumerable<Course>

@{
    ViewBag.Title = "All Courses";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">CourseID</th>
        <th>Course Name</th>
        <th class="text-right">Credits</th>
        <th class="text-right">Description</th>

        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model) {
        <tr>
            <td class="text-right">@item.CourseID</td>
            <td>@item.CourseNumber</td>
            <td class="text-right">@item.Credits.ToString()</td>
            <td class="text-right">@item.Description.ToString()</td>

            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-courseId="@item.CourseID">
                        Edit
                    </a>
                    <input type="hidden" name="CourseID" value="@item.CourseID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Course</a>
</div>